\setcounter{secnumdepth}{0}
\newtheorem{theorem}{Theorem}[section]
\newtheorem{definition}{Definition}[section] 
\newtheorem{corollary}{Corollary}[theorem]
\newtheorem{lemma}[theorem]{Lemma}
\newtheorem*{remark}{Remark}
%% This is where the new environment starts
% Math and term definitions
\newenvironment{Definition}[1]{
\begin{definition}[]
  \begin{DndSidebar}[color=PhbLightGreen]{#1}
    \normalsize
    }
{   
  \end{DndSidebar}
\end{definition}
}
\newenvironment{Theorem}[1]{
\begin{theorem}[]
  \begin{DndSidebar}[color=PhbLightGreen]{#1}
    \normalsize
    }
{   
  \end{DndSidebar}
\end{theorem}
}
\newenvironment{Corollary}{
\begin{corollary}
  \begin{DndSidebar}[color=PhbLightGreen]{}
    \normalsize
  }
{   
  \end{DndSidebar}
\end{corollary}
}
\newenvironment{Lemma}{
\begin{lemma}
  \begin{DndSidebar}[color=PhbLightGreen]{}
    \normalsize
  }
{   
  \end{DndSidebar}
\end{lemma}
}
\newenvironment{Remark}{
\begin{remark}
  \begin{DndComment}[color=PhbMauve]{}
    \normalsize
  }
{   
  \end{DndComment}
\end{remark}
}
% Reviewing a list of things after a class
\newenvironment{Review}{
  \begin{DndSidebar}[color=DmgLilac]{Review}}
{ \end{DndSidebar}}
% For Additional notes
\newenvironment{Note}{
  \begin{DndComment}[color=PhbTan]{Note}}
{ \end{DndComment}}
\newenvironment{Questions}{
  \begin{DndComment}[color=PhbLightGreen]{Question(s)}
    \begin{enumerate}}
{   \end{enumerate}
  \end{DndComment}}
\newenvironment{Answers}{
  \begin{DndComment}[color=PhbLightCyan]{Answer(s)}
    \begin{enumerate}}
{   \end{enumerate}
  \end{DndComment}}
%% new commands for Cornell Methods
%% These are useful for short, single question, item, and things to do.  
\newcommand{\Cues}[1]{\todo[inline,backgroundcolor=green!20]{#1}}
\newcommand{\Unsure}[1]{\todo[inline,backgroundcolor=red!20]{#1}}
\newcommand{\Info}[1]{\todo[inline,backgroundcolor=purple!50]{#1}}
\newcommand{\Improve}[1]{\todo[inline,backgroundcolor=blue!20]{#1}}
